(include dune.marshal)

(executable
 (name assembly)
 (modules assembly assembly_helper)
 (libraries libsail yojson sail_ast_tools checker.core))

(library
 (name sail_ast_tools)
 (modules myast myast_iterator)
 (wrapped false)
 (libraries libsail ppx_deriving_yojson.runtime checker.core)
 (preprocess
  (pps ppx_deriving_yojson ppx_deriving.show)))

(executable
 (name mysail)
 (modules mysail)
 (link_flags -linkall)
 (libraries libsail linenoise dynlink sail_ast_tools))

(executable
 (name dump)
 (modules dump specialize assembly_helper mnemonics enums call_graph)
 (libraries yojson sail_ast_tools ocamlgraph checker.core))

(executable
 (name enum)
 (modules enum)
 (libraries sail_ast_tools))

