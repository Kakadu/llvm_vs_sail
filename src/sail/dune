(rule
 (targets graph.svg)
 (mode (promote))
 (deps graph.dot)
 (action
  (run
   dot
   -Tsvg
   %{deps}
   -o
   %{targets}
   ; neato
   ; -Nlen=1.8
   ; -Gmode=hier
   ; -Goverlap=false
   ; -Tpng
   ; %{deps}
   ; -o
   ; %{targets}
   )))
